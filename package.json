{
  "name": "object-pascal-notebook",
  "displayName": "Object Pascal Notebook Support",
  "description": "Adds Object Pascal language support to VSCode Notebooks.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ElCondor1969/ObjectPascalNotebook.git"
  },
  "version": "0.0.1",
  "publisher": "yourpublisher",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Notebooks"
  ],
  "activationEvents": [
    "onNotebookType:objectPascalNotebook"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "notebooks": [
      {
        "type": "objectPascalNotebook",
        "displayName": "Object Pascal Notebook",
        "selector": [
          {
            "filenamePattern": "*.opnb"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package:win": "vsce package --target win32-x64",
    "package:linux": "vsce package --target linux-x64",
    "package:mac": "vsce package --target darwin-x64",
    "package:mac-arm": "vsce package --target darwin-arm64",
    "publish:win": "vsce publish --target win32-x64",
    "publish:linux": "vsce publish --target linux-x64",
    "publish:mac": "vsce publish --target darwin-x64",
    "publish:mac-arm": "vsce publish --target darwin-arm64",
    "publish:all": "npm run publish:win && npm run publish:linux && npm run publish:mac && npm run publish:mac-arm"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0"
  }
}
